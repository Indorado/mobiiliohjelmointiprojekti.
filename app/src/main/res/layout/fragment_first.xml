<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idPBLoading"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/idKoti"
            android:visibility="visible"
            >

                <ImageView
                    android:id="@+id/idTaustaVari"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@color/VaaleaSininenTausta" />

                <TextView
                    android:id="@+id/idNykyinenKaupunki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4sp"
                    android:gravity="center"
                    android:padding="20sp"
                    android:text="Tämänhetkinen sijainti"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_below="@id/idHakukenntta"
                    />

                <LinearLayout
                    android:id="@+id/idHakukenntta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">

                        <ImageView
                            android:id="@+id/idEtsiLogo"
                            android:layout_width="25sp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10sp"
                            android:layout_weight="0.5"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_etsi_logo_icons8"
                            app:tint="@color/white"
                            />
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/idHakuKaupunki"
                            android:layout_margin="0.5sp"
                            android:layout_weight="4.5"
                            android:background="@android:color/transparent"
                            android:hint="Etsi"
                            android:padding="0sp"
                            android:textColorHint="@color/design_default_color_on_primary"
                            app:hintTextColor="@color/white">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/idMuokkaaKaupunkia"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:importantForAutofill="no"
                                    android:inputType="text"
                                    android:singleLine="true"
                                    android:textColor="@color/white"
                                    android:textSize="13.2sp"
                                    android:padding="15sp"
                                    />

                        </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/idLampotila"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/idNykyinenKaupunki"
                    android:layout_margin="10sp"
                    android:gravity="center_horizontal"
                    android:padding="5sp"
                    android:text="20"
                    android:textColor="@color/white"
                    android:textSize="70sp" />

                <ImageView
                    android:id="@+id/idSaaTila"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/idLampotila"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginBottom="5sp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/idEhto"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="10sp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="EHTO"
                    android:textColor="@color/white"
                    android:layout_below="@id/idSaaTila"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/idRecycleSaaEnnuste"
                    android:layout_margin="8sp"
                    android:layout_marginBottom="10sp"
                    android:text="Tämänhetkinen sää"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/idRecycleSaaEnnuste"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </RelativeLayout>

</RelativeLayout>