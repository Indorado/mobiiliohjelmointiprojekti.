<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idPBLoading"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/idKoti"
            android:visibility="visible"
            >

                <ImageView
                    android:id="@+id/idTaustaVari"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@color/VaaleaSininenTausta" />

                <TextView
                    android:id="@+id/idNykyinenKaupunki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="20sp"
                    android:text="Tämänhetkinen sijainti"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/idLampotila"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/idNykyinenKaupunki"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:gravity="center_horizontal"
                    android:padding="5sp"
                    android:text="20"
                    android:textColor="@color/black"
                    android:textSize="60sp" />

                <TextView
                    android:id="@+id/idDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="500sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:gravity="center_horizontal"
                    android:padding="5sp"
                    android:text="pvm"
                    android:textColor="@color/white"
                    android:textSize="50sp" />

                <!--Onnistuiskohan tässä käyttää niitä openweatherin kuvakkeita //johanna -->
                <ImageView
                    android:id="@+id/idSaaTila"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/idLampotila"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginBottom="5sp"
                    android:src="@mipmap/ic_launcher" />


                <TextView
                    android:id="@+id/idTuntuuKuin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/idSaaTila"
                    android:layout_marginStart="100sp"
                    android:layout_marginEnd="80sp"
                    android:text="Tuntuu kuin"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/idKosteus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/idTuntuuKuin"
                    android:layout_marginStart="100sp"
                    android:layout_marginEnd="80sp"
                    android:text="Ilmankosteus"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/idHakuNappi"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <Button
                    android:id="@+id/idHaeLisaaBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30sp"
                    android:layout_marginEnd="30sp"
                    android:text="Hae muiden kaupunkien säätietoja">
                </Button>
        </RelativeLayout>

</RelativeLayout>